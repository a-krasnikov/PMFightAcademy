<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/ivLoginPageImage"
        android:layout_width="@dimen/LoginPageImageWidth"
        android:layout_height="@dimen/LoginPageImageHeight"
        android:layout_marginTop="@dimen/ivLoginPageImageMargineTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/abc_vector_test"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/etPhoneNumberMargineStartEnd"
        android:layout_marginTop="@dimen/etPhoneNumberMargineTop"
        android:layout_marginEnd="@dimen/etPhoneNumberMargineStartEnd"
        android:background="@color/white"
        android:hint="@string/etPhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLoginPageImage" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/etPasswordMargineStartEnd"
        android:layout_marginTop="@dimen/etPasswordMargineTop"
        android:layout_marginEnd="@dimen/etPasswordMargineStartEnd"
        android:background="@color/white"
        android:hint="@string/etPassword"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPhoneNumber" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/etPasswordMargineStartEnd"
        android:layout_marginTop="@dimen/etPasswordMargineTop"
        android:layout_marginEnd="@dimen/etPasswordMargineStartEnd"
        android:background="@color/white"
        android:hint="@string/etName"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btnLoginMarginTop"
        android:text="@string/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etName" />

</androidx.constraintlayout.widget.ConstraintLayout>